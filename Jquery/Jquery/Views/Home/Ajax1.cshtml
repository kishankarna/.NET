@{
    ViewBag.Title = "Ajax1";
}
<script>
    $(function () {
        var textboxes = $('input[type="text"]');

        textboxes.focus(function () {
            var helpID = $(this).attr('id') + 'HelpDiv';       
            // $('#' + helpID).load('http://date.jsontest.com/');       //this is from real time webservice data
            $('#' + helpID).load('http://localhost:52162/help.html #'+ helpID);  //this is from same project
        });
        textboxes.blur(function () {
            var helpID = $(this).attr('id') + 'HelpDiv';           
            $('#' + helpID).html("");  //this is to clear div
        });
     
    });

</script>
